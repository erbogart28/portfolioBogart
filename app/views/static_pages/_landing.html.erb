<section class="landing container-fluid"><!-- Landing Page -->
    <div class="row-new" id="landing-header-wrap"><!-- main header on landing page -->
        <p id="landing-header" class="col-xs-12">&mdash; Web developer &mdash;<span>Hi, I'm Evan! </span> &mdash; UI/UX Designer &mdash;</p>
    </div><!-- END main header text container -->
    
    <div class="fade-in" id="landingPageRows"><!-- article wrap for Row sections -->
        <section class="row landingRowSection sectionScroll" id="aboutRowLanding">
            <%= link_to "About Me", '#aboutme-content', :class => 'landingRowButton' %>
            <!-- shooting stars / CSS animations used for star movements -->
            <span class="star1"></span>
            <span class="star2"></span>
            <span class="star3"></span>
        </section>
        
        <section class="row landingRowSection sectionScroll" id="devRowLanding">
            <%= link_to "Dev Work", '#dev-content', :class => 'landingRowButton' %>
        </section>
        
        <section class="row landingRowSection sectionScroll" id="designRowLanding"> 
            <%= link_to "UI/UX Work", '#design-content', :class => 'landingRowButton' %>
        </section>
    </div>
    
    <div id="scrolldown-button-row"  class="sectionScroll" ><!-- Arrow down scroll down button - Scrolls to ABOUT ME section of page -->
        <a class="scroll-down" href="#aboutme-content">
            <span class="arrow-scroll-btn"></span>
        </a>
    </div><!-- end scroll down container -->
</section><!-- END LANDING page section -->