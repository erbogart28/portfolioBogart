<script>
  $(document).on("turbolinks:load", function() {
    // add remove chevyron arrow down if window is scrolled -- only fully visible if 0 scroll occurs  
    $(function () {
      var w = $(window);
      w.scroll(function () {
        if (w.scrollTop() !== 0) {
          $(".scroll-down").removeClass("visible");
        return;}
        $(".scroll-down").addClass("visible"), 
        $(".scroll-down").css('opacity', '1');
        });
        $(".scroll-down").addClass("visible");
    }); // add remove chevyron arrow down if window is scrolled -- only fully visible if 0 scroll occurs  
    $(function() {
      $('.scroll-down').on ('click', function() {
        $('html, body').animate({scrollTop: $('section.aboutme-content').offset().top }, 'slow');
          return false;
        });
    }); // end scroll-down arrow click
    
    $(function() {
      $('.scroll-down2').on ('click', function() {
        $('html, body').animate({scrollTop: $('section.design-content').offset().top }, 'slow');
          return false;
        });
    }); // end scroll-down arrow click
    
    $(function() {
      $('.scroll-down3').on ('click', function() {
        $('html, body').animate({scrollTop: $('section.dev-content').offset().top }, 'slow');
          return false;
        });
    }); // end scroll-down arrow click
    
    $(function() {
      $('.scroll-button').on('click', function() {
        $('html, body').animate({scrollTop: $('section.aboutme-content').offset().top }, 'slow');
        return false;
      });
    }); //end scroll button click func
    
    $(function() {
      $('.scroll-button2').on('click', function() {
        $('html, body').animate({scrollTop: $('section.design-content').offset().top }, 'slow');
        return false;
      });
    }); //end scroll button click func


    $(function() {
      $('.scroll-button3').on('click', function() {
        $('html, body').animate({scrollTop: $('section.dev-content').offset().top }, 'slow');
        return false;
      });
    }); //end scroll button click func
    $(function (){
      $('[data-toggle="tooltip"]').tooltip()
    }); 
  //   $(function () {                               // show tool tip for scroll-down upon load
  //     $('.arrow-scroll-btn[data-toggle="tooltip"]').tooltip("show");
  //     $('[data-toggle="tooltip"]').find(".arrow-scroll-btn").removeClass("in");
  // });
  }); //end .on turobolinks load
</script>
</head>
